{% extends 'base.html.twig' %}

{% block title %}{{ 'transaction.show.title'|trans }}{% endblock %}

{% block body %}
    <h1 class="mb-4">{{ 'transaction.show.heading'|trans }}</h1>

    <div class="card shadow-sm p-4 bg-white rounded mb-3">
        <ul class="list-unstyled mb-0">
            <li><strong>{{ 'label.amount'|trans }}:</strong> {{ transaction.amount }} z≈Ç</li>
            <li><strong>{{ 'label.category'|trans }}:</strong> {{ transaction.category.title }}</li>
            <li><strong>{{ 'label.wallet'|trans }}:</strong> {{ transaction.wallet.name }}</li>
            <li><strong>{{ 'label.created_at'|trans }}:</strong> {{ transaction.createdAt|format_date('long') }}</li>
            <li><strong>{{ 'label.updated_at'|trans }}:</strong> {{ transaction.updatedAt|format_date('long') }}</li>
        </ul>
    </div>

    <div class="d-flex gap-2 flex-wrap">
        <a href="{{ path('transaction_edit', {id: transaction.id}) }}" class="btn btn-primary">
            <i class="bi bi-pencil"></i> {{ 'button.edit'|trans }}
        </a>

        <a href="{{ path('transaction_delete', {id: transaction.id}) }}" class="btn btn-danger">
            <i class="bi bi-trash"></i> {{ 'button.delete'|trans }}
        </a>

        <a href="{{ path('transaction_index') }}" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left-circle"></i> {{ 'button.back_to_list'|trans }}
        </a>
    </div>
{% endblock %}
