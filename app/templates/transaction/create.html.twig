{% extends 'base.html.twig' %}

{% block title %}{{ 'transaction.create.title'|trans }}{% endblock %}

{% block body %}
    <h1 class="mb-4">{{ 'transaction.create.heading'|trans }}</h1>

    <div class="card shadow-sm p-4 bg-white rounded">
        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
        <div class="col-12">
            {{ form_row(form.amount, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-12">
            {{ form_row(form.wallet, {'attr': {'class': 'form-select'}}) }}
        </div>
        <div class="col-12">
            {{ form_row(form.category, {'attr': {'class': 'form-select'}}) }}
        </div>
        <div class="col-12">
            {{ form_row(form.type, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="col-12">
            <button class="btn btn-success">
                <i class="bi bi-check-circle"></i> {{ 'button.save'|trans }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>

    <a href="{{ path('transaction_index') }}" class="btn btn-outline-primary mt-3">
        <i class="bi bi-arrow-left-circle"></i> {{ 'button.back_to_list'|trans }}
    </a>
{% endblock %}
