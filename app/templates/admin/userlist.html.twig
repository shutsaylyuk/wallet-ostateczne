{% extends 'base.html.twig' %}

{% block title %}{{ 'user.list.title'|trans }}{% endblock %}

{% block body %}
    <h1 class="mb-4">{{ 'user.list.heading'|trans }}</h1>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'user.list.id'|trans, 'u.id') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'user.list.email'|trans, 'u.email') }}</th>
            <th>{{ 'user.list.roles'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in pagination %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'user.list.empty'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-3">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}